{% extends 'base.html.twig' %}

{% block title %}Geizig - {{ page }}{% endblock %}

{% block body %}
    <div>
        <h1>Hello {{ app.user.firstname }} {{ app.user.lastname }} - {{ app.user.id }}</h1>
        <div>
           {% if app.user.isAllowedToSelectUser and not hasAlreadySelectedUser %}
               You are allowed to select User
           {% elseif not app.user.isAllowedToSelectUser and not hasAlreadySelectedUser%}
                You have to create your list first
           {% elseif hasAlreadySelectedUser%}
                {% set userSelected = app.user.selectedUser %}
                You have selected {{ userSelected.firstname }} {{ userSelected.lastname }}
           {% endif %}
        </div>
    </div>
{% endblock %}
